package buildingsPinfel;
import pinfelBot.Pinfel;
import bwapi.*;
import utilitiesPinfel.*;

public class BuildingRoboticsFacility {
	
	public static Boolean conditionToBuildRobo() {
		if (Pinfel.game.enemy().getRace() == Race.Terran) {
			if (Pinfel.game.self().allUnitCount(UnitType.Protoss_Nexus) >= 2 && Pinfel.game.self().allUnitCount(UnitType.Protoss_Robotics_Facility) == 0) {
				return true;
			}
		}
		return false;
	}
	
	public static void buildingRoboticsFacilityUpdate() {
		PinfelUtil.buildingBuilder(UnitType.Protoss_Robotics_Facility, conditionToBuildRobo() && !BuildingPylon.pylonRequired());
	}
}
